<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<resource-bundle>
			<base-name>/Bundle</base-name>
			<var>bundle</var>
		</resource-bundle>
	</application>
	
	<managed-bean>
		<managed-bean-name>guestPreferences</managed-bean-name>
		<managed-bean-class>org.primefaces.showcase.service.GuestPreferences</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeSwitcherBean</managed-bean-name>
		<managed-bean-class>org.primefaces.showcase.service.ThemeSwitcherBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>gp</property-name>
			<value>#{guestPreferences}</value>
		</managed-property>
	</managed-bean>

</faces-config>
